<div class="step_breadcrumbs">
  <% ProjectStepsHelper::STEPS.each_with_index do |breadcrumb_step, index| %>
    <%= link_to edit_project_step_model_path(breadcrumb_step), class: "step_breadcrumb #{"selected_step" if breadcrumb_step == current_step}" do %>
      <div class="step_number"><%= step_number = index + 1 %></div>
      <div class="step_name"><%= breadcrumb_step.humanize %></div>
    <% end %>
  <% end %>
</div>
